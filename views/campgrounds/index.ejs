<% layout('layouts/boilerplate.ejs') %>
  <h1>All Campgrounds</h1>
  <% for(let campground of campgrounds){ %>
    <div class="card mb-3">
      <div class="row">
        <div class="col-md-4">
          <img src="<%= campground.images[0].url %>" class="w-100" alt="campground image">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">
              <%= campground.title %>
            </h5>
            <p class="card-text">
              <small class="text-body-secondary">
                <%= campground.location %>
              </small>
            </p>
            <p class="card-text">
              <%= campground.description %>
            </p>
            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">View <%= campground.title %></a>
          </div>
        </div>
      </div>
    </div>
    <% } %>