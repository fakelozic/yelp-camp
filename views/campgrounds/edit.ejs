<% layout('layouts/boilerplate.ejs') %>
  <div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-6 offset-3">
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post" class="needs-validation" novalidate
        enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-lable" for="title">Title</label>
          <input class="form-control" type="text" id="title" name="campground[title]" value="<%=campground.title %>"
            required>
          <div class="invalid-feedback">
            Please fill the title field.
          </div>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-lable" for="location">Location</label>
          <input class="form-control" type="text" id="location" name="campground[location]"
            value="<%=campground.location %>" required>
          <div class="invalid-feedback">
            Please fill the location field.
          </div>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label for="formFileMultiple" class="form-label">Upload more Images</label>
          <input class="form-control" name="image" type="file" id="formFileMultiple" multiple>
        </div>
        <div class="mb-3">
          <label class="form-lable" for="price">Price</label>
          <div class="input-group">
            <span class="input-group-text">$</span>
            <input type="number" placeholder="0.00" class="form-control" id="price"
              aria-label="Amount (to the nearest dollar)" name="campground[price]" value="<%=campground.price %>"
              required>
            <div class="invalid-feedback">
              Please fill the price filed.
            </div>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-lable" for="description">Description</label>
          <textarea class="form-control" type="text" id="description" name="campground[description]"
            required><%=campground.description %></textarea>
          <div class="invalid-feedback">
            Please fill the description filed.
          </div>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <% campground.images.forEach((img, i)=> { %>
            <img src="<%= img.thumbnail %>" alt="">
            <div class="form-check-inline">
              <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
            </div>
            <label for="image-<%= i %>">Delete?</label>
            <% }) %>
        </div>
        <div class="mb-3">
          <button class="btn btn-info" type="submit">Update Campground</button>
          <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">Back to Campground details</a>
        </div>
    </div>
  </div>
  </form>
  </div>
  </div>