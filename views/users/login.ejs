<% layout('layouts/boilerplate.ejs') %>

  <h1>Login</h1>
  <form action="/login" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
      <label class="form-lable" for="username">Username</label>
      <input class="form-control" type="text" id="username" name="username" required />
      <div class="invalid-feedback">Please fill the Username field.</div>
      <div class="valid-feedback">Looks good!</div>
    </div>

    <div class="mb-3">
      <label class="form-lable" for="password">Password</label>
      <input class="form-control" type="password" id="password" name="password" required />
      <div class="invalid-feedback">Please fill the Password field.</div>
      <div class="valid-feedback">Looks good!</div>
    </div>

    <button type="submit" class="btn btn-dark">Login</button>
  </form>