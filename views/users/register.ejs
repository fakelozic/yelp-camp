<% layout('layouts/boilerplate.ejs') %>

<h1>Register!!</h1>
<form action="/register" method="post" class="needs-validation" novalidate>
  <div class="mb-3">
    <label class="form-lable" for="location">Location</label>
    <input
      class="form-control"
      type="text"
      id="location"
      name="campground[location]"
      required
    />
    <div class="invalid-feedback">Please fill the location field.</div>
    <div class="valid-feedback">Looks good!</div>
  </div>
</form>
